@page "/transaction"
@using Personal_Expense_Tracking.Models
@using Personal_Expense_Tracking.ViewModels
@inject NavigationManager NavigationManager

<div class="transaction-container">
    <div class="transaction-box">
        <h1 class="logo">Add Transaction</h1>
        <p class="subtitle">Fill in the details below to add a transaction</p>

        <!-- Form submission handler -->
        <EditForm Model="@transaction" OnValidSubmit="HandleValidSubmitAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <!-- Date and Time Input (Use HTML input instead of InputText) -->
            <div class="form-group">
                <label for="date-time">Transaction Date and Time</label>
                <input id="date-time" @bind="transaction.Date" type="datetime-local" class="form-control" disabled />
            </div>

            <!-- Remarks Input -->
            <div class="form-group">
                <label for="remarks">Remarks</label>
                <InputText id="remarks" @bind-Value="transaction.Remarks" class="form-control" placeholder="Enter transaction remarks" required />
            </div>

            <!-- Transaction Type Input -->
            <div class="form-group">
                <label for="type">Transaction Type</label>
                <select id="type" @bind="transaction.Type" class="form-control" required>
                    <option value="Credit">Credit</option>
                    <option value="Debit">Debit</option>
                    <option value="Debt">Debt</option>
                </select>
            </div>

            <!-- Tag Input -->
            <div class="form-group">
                <label for="tag">Tag</label>
                <InputText id="tag" @bind-Value="transaction.Tag" class="form-control" placeholder="Enter transaction tag" required />
            </div>

            <!-- Amount Input -->
            <div class="form-group">
                <label for="amount">Amount</label>
                <InputNumber id="amount" @bind-Value="transaction.Amount" class="form-control" placeholder="Enter amount" required />
            </div>

            <!-- Submit Button -->
            <button type="submit" class="submit-btn">Add Transaction</button>
        </EditForm>
    </div>
</div>

@code {
    private Transactions transaction = new Transactions(); // Bind this to the form
    private TransactionsViewModel transactionsViewModel = new TransactionsViewModel(); // ViewModel for transactions

    // Handle form submission asynchronously
    private async Task HandleValidSubmitAsync()
    {
        // Add the transaction to the database asynchronously
        await transactionsViewModel.AddTransaction(transaction);

        // Optionally, clear the form after submission
        transaction = new Transactions();
    }
}

