@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<!-- Main Layout -->
<MudLayout>
    <!-- Application Bar -->
    <MudAppBar Elevation="1">
        <!-- Menu Button to toggle drawer -->
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@DrawerToggle" />
        <!-- Application Title -->
        <MudText Typo="Typo.h5" Class="ml-3">personal</MudText>

        <MudSpacer /> <!-- Pushes content to the right -->
        <!-- Additional Options Button -->
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert"
                       Color="Color.Inherit"
                       Edge="Edge.End" />
    </MudAppBar>

    <!-- Side Drawer -->
    <MudDrawer Open="@_drawerOpen"
               ClipMode="DrawerClipMode.Always"
               Elevation="2">
        <NavMenu /> <!-- Placeholder for navigation menu -->
    </MudDrawer>

    <!-- Main Content -->
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    // State to manage drawer visibility
    private bool _drawerOpen = true;

    // Toggle method for the side drawer
    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
